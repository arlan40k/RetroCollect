<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uco.retrocollect.retrocollect.GameActivity">

    <LinearLayout
        android:id="@+id/gameTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gameTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Title: " />

        <TextView
            android:id="@+id/gameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameReleaseDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gameReleaseLayout"
        android:layout_alignLeft="@+id/gameReleaseLayout"
        android:layout_alignStart="@+id/gameReleaseLayout">

        <TextView
            android:id="@+id/gameReleaseDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date: " />

        <TextView
            android:id="@+id/gameReleaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gamePublisherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gameReleaseDateLayout"
        android:layout_alignLeft="@+id/gameReleaseDateLayout"
        android:layout_alignStart="@+id/gameReleaseDateLayout">

        <TextView
            android:id="@+id/gamePublisherLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publisher: " />

        <TextView
            android:id="@+id/gamePublisherTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameStudioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gamePublisherLayout"
        android:layout_alignLeft="@+id/gamePublisherLayout"
        android:layout_alignStart="@+id/gamePublisherLayout">

        <TextView
            android:id="@+id/gameStudioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio: " />

        <TextView
            android:id="@+id/gameStudioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameRatingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gameStudioLayout"
        android:layout_alignLeft="@+id/gameStudioLayout"
        android:layout_alignStart="@+id/gameStudioLayout">

        <TextView
            android:id="@+id/gameRatingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: " />

        <TextView
            android:id="@+id/gameRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameReleaseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/gameTitleLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp">

        <TextView
            android:id="@+id/gameReleaseYearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Year: " />

        <TextView
            android:id="@+id/gameReleaseYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</RelativeLayout>
